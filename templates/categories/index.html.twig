{% trans_default_domain 'admin' %}

{% extends 'base.html.twig' %}

{% block title %}{{ "categories"|trans }}{% endblock %}
{% block pageTitle %}{{ 'categories'|trans }}{% endblock %}
{% block content %}
    <div style="display: none">
        {{ form(form) }}
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">{{ 'category.parent'|trans }}</th>
            <th scope="col">{{ 'category.name'|trans }}</th>
            <th scope="col">{{ 'actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>

            {% if not category.parent == null %}
                <th scope="row">{{ category.id }}</th>
                <td>
                        {{ category.parent.name }}
                    </td>
                    <td>
                        {{ category.name }}
                    </td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('manager_edit_category', {id: category.id}) }}">{{ 'eidt'|trans }}</a>
                        <a class="btn btn-danger" href="{{ path('manager_delete_category', {id: category.id}) }}">{{ 'delete'|trans }}</a>
                    </td>
            {% endif %}
            </tr>

        {% endfor %}
        </tbody>
    </table>
    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(categories) }}
    </div>
{% endblock %}