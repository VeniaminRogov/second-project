{% extends './base.html.twig' %}

{% block title %}Admin page{% endblock %}
{% block pageTitle %}Admin{% endblock %}
{#{% dump(users) %}#}
{% block content %}
    <div>
        {{ form(sortForm) }}
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                    {{ role }}
                    {% endfor %}
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('admin_edit_user', {id: user.id}) }}">Edit</a>
                    <a class="btn btn-danger" href="{{ path('admin_delete_user', {id: user.id}) }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>
{% endblock %}