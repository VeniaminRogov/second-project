{% extends 'base.html.twig' %}

{% block title %}Store{% endblock %}
{% block pageTitle %}Products list{% endblock %}
{% block content %}
    <div class="container">
        <div class="container-fluid bg-trasparent my-4 p-3" style="position: relative;">
            <div class="row row-cols-lg-5 g-5">

                {% for product in products %}
                    {% if product.isAvailable == false %}

                    {% else %}
                    <div class="col">
                        <div class="card  shadow-sm">
                            {% if product.image == null %}

                            {% else %}
                                <img class="card-img" src="{{ (image_url ~ product.image) | imagine_filter('edit_thumb') }}" alt="No found avatar">
                            {% endif %}
{#                            <hr>#}
                            <div class="card-body">
                                <div class="clearfix mb-3">
                                    <span class="float-start badge rounded-pill bg-warning">{{ product.category.name }}</span>
                                    <span class="float-end price-hp">{{ product.price }}â‚¬</span>
                                </div>
                                <h5 class="card-title">{{ product.name }}</h5>
                                <div class="text-center my-4">
                                    <a href="{{ path('store_product', {slug: product.id}) }}" class="btn btn-primary">Check offer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}

            <div>
        </div>
    </div>
{% endblock %}