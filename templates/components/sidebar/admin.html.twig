<a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none" href="{{ path('admin_user_list') }}">
    <span class="fs-5 fw-bold">Admin Panel</span>
</a>
<ul class="list-unstyled ps-0">
    <li class="mb-1">
        <button class="btn rounded collapsed" data-bs-toggle="collapse" data-bs-target="#store" aria-expanded="false">Store</button>
        <div class="show" id="store">
            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 ms-4 small">
                <li><a class="link-dark rounded" href="{{ path('store_list') }}">Store</a></li>
                <li>
                    <span>Categories</span>
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 ms-4 small">
                            {% for category in categories %}
                                {% dump(category) %}

                                {% if category.parent == null %}
                                    {{ category.name }}
                                    <li>
                                        <ul>
                                            {% for children in category.children %}
                                                <li>
                                                    <a class="link-dark rounded" href="{{ path('store_product_category', {slug: children.slug}) }}">
                                                        {{ children.name }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>

                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                </li>
            </ul>
        </div>
    </li>
    <li class="mb-1">
        <button class="btn rounded collapsed" data-bs-toggle="collapse" data-bs-target="#cart" aria-expanded="false">Cart</button>
        <div class="show" id="cart">
            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 ms-4 small">
                <li><a class="link-dark rounded" href="{{ path('cart') }}">Cart</a></li>
            </ul>
        </div>
    </li>
    <li class="mb-1">
        <button class="btn rounded collapsed" data-bs-toggle="collapse" data-bs-target="#users" aria-expanded="false">Users</button>
        <div class="show" id="users">
            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 ms-4 small">
                <li><a class="link-dark rounded" href="{{ path('admin_user_list') }}">All users</a></li>
                <li><a class="link-dark rounded" href="{{ path('admin_add_user') }}">Add user</a></li>
            </ul>
        </div>
    </li>
    <li class="mb-1">
        <button class="btn rounded collapsed" data-bs-toggle="collapse" data-bs-target="#categoreis" aria-expanded="false">Categories</button>
        <div class="show" id="categoreis">
            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 ms-4 small">
                <li><a class="link-dark rounded" href="{{ path('manager_add_category') }}">Add category</a></li>
                <li><a class="link-dark rounded" href="{{ path('manager_list_category') }}">All categories</a></li>
            </ul>
        </div>
    </li>
    <li class="mb-1">
        <button class="btn rounded collapsed" data-bs-toggle="collapse" data-bs-target="#products" aria-expanded="false">Products</button>
        <div class="show" id="products">
            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 ms-4 small">
                <li><a class="link-dark rounded" href="{{ path('manager_add_products') }}">Add product</a></li>
                <li><a class="link-dark rounded" href="{{ path('manager_products_list') }}">All products</a></li>
            </ul>
        </div>
    </li>
    <li class="border-top my-3"></li>
    <li class="mb-1">
        <button class="btn rounded collapsed" data-bs-toggle="collapse" data-bs-target="#account" aria-expanded="false">Admin</button>
        <div class="show" id="account">
            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 ms-4 small">
                <li><a class="link-dark rounded" href="{{ path('app_logout') }}">Logout</a></li>
            </ul>
        </div>
    </li>
</ul>